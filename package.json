{
  "scripts": {
    "start": "npm-run-all --parallel css eleventy",
    "eleventy": "cross-env ELEVENTY_EXPERIMENTAL=true eleventy --serve",
    "debug": "set DEBUG=* & eleventy",
    "css": "postcss src/static/css/tailwind.css --o _tmp/static/css/style.css --watch",
    "build": "cross-env NODE_ENV=production eleventy && cross-env NODE_ENV=production postcss src/static/css/tailwind.css --o _site/static/css/style.css"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@asciidoctor/core": "^2.2.1",
    "@tailwindcss/typography": "^0.3.1",
    "alpinejs": "^2.6.0",
    "asciidoctor": "^2.2.1",
    "asciidoctor-html5s": "^0.5.0",
    "asciidoctor-prism-extension": "^2.0.6",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "eleventy-plugin-toc": "^1.1.0",
    "eta": "^1.12.1",
    "html-minifier": "^4.0.0",
    "js-yaml": "^3.14.0",
    "luxon": "^1.25.0",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "prismjs": "^1.21.0",
    "tailwindcss": "^2.0.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.2",
    "autoprefixer": "^10.1.0",
    "postcss": "^8.2.1"
  }
}
