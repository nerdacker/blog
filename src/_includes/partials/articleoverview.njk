<article class="flex rounded flex-col shadow my-4 w-full">
	<!-- Article Image -->
	{% if post.data.image %}
	<a href="{{ post.url }}" class="hover:opacity-75">
		<div class="overflow-hidden" >
			<img src="{{ post.data.image }}" class="h-40 w-full object-cover transition duration-500 ease-in-out transform hover:-translate-y-1 hover:scale-105">
		</div>
	</a>
	{% endif %}
	<div class="bg-white flex flex-col justify-start p-6">
		<a href="{{ post.url | url }}" class="text-3xl font-bold hover:text-gray-700 pb-4">
		{% if post.data.title %}
		{{ post.data.title }}
		{% else %}
		Unknown
		{% endif %}
		</a>
		<!-- Untertitel -->
		<p href="#" class="text-sm pb-3">
			<time>{{ post.date | localizedDate(localeRegion) }} by <a href="/{{ locale }}/author/{{ post.data.author }}/" class="font-semibold hover:text-gray-800">{{ post.data.author }}</a></time>
		</p>
		<!-- Tags -->
		<div class="tags">
		{% for posttag in post.data.tags %}
			{% set dtag = categories.categories | tagFilter(posttag) %}
			{% include "partials/tag.njk" %}
		{% endfor %}
		</div>
		<p class="text-base leading-6 text-gray-500 mb-3">
		</p>
		{% if post.data.description %}
			<p class="pb-6">
				{{ post.data.description }}
			</p>
		{% endif %}

		<p>
			<a href="{{ post.url | url }}" class="uppercase text-gray-800 hover:text-black">
			   {{ i18n.readMore }} â†’
			</a>
		</p>
	</div>
</article>