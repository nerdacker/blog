---
title: Beiträge
layout: default
translationKey: blog
---

{% block content %}

    <div class="container max-w-3xl mt-6 px-6">
        <h1 class="font-bold text-5xl">{{title}}</h1>
        <section class="mt-15">
            {% set postslist = collections.posts_de %}

            {% for post in postslist | reverse %}
                <article class="flex flex-col shadow my-4">
                    <!-- Article Image -->
                    {% if post.data.image %}
                    <a href="{{ post.url }}" class="hover:opacity-75">
                        <img src="{{ post.data.image }}">
                    </a>
                    {% endif %}
                    <div class="bg-white flex flex-col justify-start p-6">
                        <!-- Tags -->
                        {% for tag in post.data.tags %}
                            <!-- todo: insert real link here -->
                            <a href="#" class="text-blue-700 text-sm font-bold uppercase pb-4">{{ tag }}</a>
                        {% endfor %}
                        <h2 class="font-bold text-3xl text-gray-900 mb-2">
                            <a href="{{ post.url | url }}">
                                {% if post.data.title %}
                                    {{ post.data.title }}
                                {% else %}
                                Unbenannt
                                {% endif %}
                            </a>
                        </h2>
                        <p class="text-base leading-6 text-gray-500 mb-3">
                            <time>{{ post.date | localizedDate(localeRegion) }} von <a>{{ post.data.author }}</a></time>
                        </p>
                        {% if post.data.description %}
                            <p class="text-lg text-gray-500 mb-3">
                                {{ post.data.description }}
                            </p>
                        {% endif %}

                        <p>
                            <a href="{{ post.url | url }}" class="text-indigo-500 font-bold text-lg">
                              Mehr lesen →
                             </a>
                        </p>
                    </div>
                </article>
            {% endfor %}
        </section>
    </div>

{% endblock %}
