---
pagination:
  data: sortandfilter.date
  size: 1
  alias: order
  addAllPagesToCollections: true
permalink: /{{ locale }}/blog/date/{{ order | slug }}/index.html
eleventyComputed:
  title: "Beitr√§ge sortiert nach Datum"
  metaTitle: "{{ site.meta[locale].title }} - {{ title }}"
---
{% extends "default-with-aside.njk" %}
{% block text %}
    <section class="w-full md:w-2/3 flex flex-col items-center px-3">
        {% set postslist = collections.posts_de %}

        {% for post in postslist | sortPostsByDate(order) %}
			{% include "partials/articleoverview.njk" %}
        {% endfor %}
    </section>
{% endblock %}
{% block sidebar %}
	{% include "partials/blogsidebar.njk" %}
{% endblock %}