---
permalink: /{{ locale }}/index.html
title: Posts
translationKey: blog
---
{% extends "default-with-aside.njk" %}
{% block text %}
    <section class="w-full md:w-2/3 flex flex-col items-center px-3">
        {% set postslist = collections.posts_en %}

        {% for post in postslist | reverse %}
            <article class="flex flex-col shadow my-4">
                <!-- Article Image -->
                {% if post.data.image %}
                    <a href="{{ post.url }}" class="hover:opacity-75">
                        <div class="overflow-hidden" >
                            <img src="{{ post.data.image }}" class="h-40 w-full object-cover transition duration-500 ease-in-out transform hover:-translate-y-1 hover:scale-105">
                        </div>
                    </a>
                {% endif %}
                <div class="bg-white flex flex-col justify-start p-6">
                    <!-- Tags -->
                    <div>
                        {% for tag in post.data.tags %}
                            <a href="/{{locale}}/tags/{{tag}}/" class="rounded-full {{ colors.background }} {{ colors.backgroundtext }} text-sm font-bold py-1 px-2 mr-2 hover:text-gray-400">#{{ tag }}</a>
                        {% endfor %}
                    </div>
                    <a href="{{ post.url | url }}" class="text-3xl font-bold hover:text-gray-700 pb-2 mt-2 uppercase">
                        {% if post.data.title %}
                            {{ post.data.title }}
                        {% else %}
                    Unknown
                    {% endif %}
                    </a>
                    <!-- Untertitel -->
                    <p href="#" class="text-sm pb-3">
                        <time><i>{{ post.date | localizedDate(localeRegion) }}</i> by <a href="/{{ locale }}/author/{{ post.data.author | slug }}/" class="font-semibold hover:text-gray-800">{{ post.data.author }}</a>
                        </time>
                    </p>
                    <p class="text-base leading-6 text-gray-500 mb-3"></p>
                    {% if post.data.description %}
                        <p class="pb-6">
                            {{ post.data.description }}
                        </p>
                    {% endif %}

                    <p>
                        <a href="{{ post.url | url }}" class="uppercase text-gray-800 hover:text-black">
                          Read more â†’
                         </a>
                    </p>
                </div>
            </article>
        {% endfor %}
    </section>
{% endblock %}
