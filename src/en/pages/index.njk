---
permalink: /{{ locale }}/index.html
title: Posts
layout: default
translationKey: blog
---

{% block content %}
    <div class="container max-w-3xl mt-6 px-6">
        <section class="mt-15">
            {% set postslist = collections.posts_de %}

            {% for post in postslist | reverse %}
                <article class="flex flex-col shadow my-4">
                    <!-- Article Image -->
                    {% if post.data.image %}
                    <a href="{{ post.url }}" class="hover:opacity-75">
                        <img src="{{ post.data.image }}" class="h-40 w-full object-cover">
                    </a>
                    {% endif %}
                    <div class="bg-white flex flex-col justify-start p-6">
                        <!-- Tags -->
                        {% for tag in post.data.tags %}
                            <a href="/{{locale}}/tags/{{tag}}/" class="{{colors.link-bg}} text-sm font-bold uppercase pb-4 hover:text-gray-700">#{{ tag }}</a>
                        {% endfor %}
                        <a href="{{ post.url | url }}" class="text-3xl font-bold hover:text-gray-700 pb-4">
                        {% if post.data.title %}
                        {{ post.data.title }}
                        {% else %}
                        Unknown
                        {% endif %}
                        </a>
                        <!-- Untertitel -->
                        <p href="#" class="text-sm pb-3">
                            <time>{{ post.date | localizedDate(localeRegion) }} by <a href="/{{ locale }}/author/{{ post.data.author | slug }}/" class="font-semibold hover:text-gray-800">{{ post.data.author }}</a></time>
                        </p>
                        <p class="text-base leading-6 text-gray-500 mb-3">
                        </p>
                        {% if post.data.description %}
                            <p class="pb-6">
                                {{ post.data.description }}
                            </p>
                        {% endif %}

                        <p>
                            <a href="{{ post.url | url }}" class="uppercase text-gray-800 hover:text-black">
                              Read more â†’
                             </a>
                        </p>
                    </div>
                </article>
            {% endfor %}
        </section>
    </div>

{% endblock %}
